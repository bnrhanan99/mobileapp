<resources>

    <!-- Style for the main ConstraintLayout background -->
    <style name="MainConstraintLayout">
        <item name="android:background">#FCFCFC</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">321dp</item>
        <item name="android:layout_height">251dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="WelcomeText">
        <item name="android:layout_width">182dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OtherPurpleText">
        <item name="android:textColor">#6C63FF</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="CheckboxStyle">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="OtherBlackText">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="NextButtonStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#6C63FF</item>
        <item name="android:textColor">#FCFCFC</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NewMemberText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RegisterNowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#6C63FF</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="GetStartedText">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AlreadyMemberText">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="LoginText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:textColor">#6C63FF</item>
        <item name="android:textSize">13sp</item>
    </style>

    <color name="grey">#33C4C4C4</color>
    <color name="light_grey">#CBCBCB</color>
</resources>
